---
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>Txchyon Alpha Drops</title>
    <style>
      body { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif; margin: 0; padding: 0; background: #0f0f0f; color: white; }
      .container { max-width: 1200px; margin: 0 auto; padding: 2rem; }
      h1 { font-size: 3rem; margin-bottom: 1rem; }
      .post { background: #1a1a1a; padding: 1.5rem; border-radius: 0.5rem; margin-bottom: 1rem; }
      .post h2 { font-size: 1.5rem; margin-bottom: 0.5rem; }
      .post p { margin-bottom: 1rem; }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Txchyon Alpha Drops</h1>
      <p>Real edges. No paywall. No bullshit.</p>
      
      {posts.length === 0 ? (
        <p>No posts yet.</p>
      ) : (
        posts.map(post => (
          <div class="post">
            <h2>{post.data.title}</h2>
            <p>{post.data.description}</p>
            <p><em>{post.data.pubDate.toLocaleDateString()}</em></p>
            <div set:html={post.body} />
            <a href={`/blog/${post.slug}`}>Read Full Post</a>
          </div>
        ))
      )}
    </div>
  </body>
</html>
