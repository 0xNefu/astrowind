---
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>Txchyon Alpha Drops</title>
    @import '../styles/global.css';  <!-- Pulls in Tailwind -->
  </head>
  <body class="bg-gray-900 text-white">
    <div class="container mx-auto px-6 py-24">
      <h1 class="text-5xl font-bold mb-4">Txchyon Alpha Drops</h1>
      <p class="text-xl text-gray-400 mb-16">Real edges. No paywall. No bullshit.</p>
      
      {posts.length === 0 ? (
        <p>No posts yet.</p>
      ) : (
        <div class="grid gap-10 md:grid-cols-2 lg:grid-cols-3">
          {posts.map(post => (
            <article class="bg-gray-800 p-6 rounded-lg shadow-lg hover:shadow-xl transition">
              <h2 class="text-2xl font-bold mb-2">{post.data.title}</h2>
              <p class="text-gray-400 mb-4">{post.data.description}</p>
              <p class="text-sm text-gray-500 mb-4">{post.data.pubDate.toLocaleDateString()}</p>
              <a href={`/blog/${post.slug}`} class="text-cyan-400 hover:underline">Read full post →</a>
            </article>
          ))}
        </div>
      )}
    </div>
  </body>
</html>
