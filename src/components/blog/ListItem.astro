---
// THIS IS THE NUCLEAR WORKING VERSION
export interface Props {
  post: any;
}
const { post } = Astro.props;

const title = post?.data?.title || "No title";
const image = post?.data?.image || "https://via.placeholder.com/1920x1080/6366f1/ffffff?text=TXCHYON";
const date = post?.data?.publishDate || new Date();
---

<article class="bg-white rounded-xl overflow-hidden shadow-lg">
  <a href={`/blog/${post.slug}/`}>
    <img 
      src={image} 
      alt={title}
      class="w-full h-64 object-cover"
    />
    <div class="p-6">
      <h2 class="text-2xl font-bold text-purple-600">
        {title}
      </h2>
      <time class="text-sm text-gray-500">
        {new Date(date).toLocaleDateString()}
      </time>
    </div>
  </a>
</article>