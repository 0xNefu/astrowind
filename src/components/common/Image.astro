---
// Dummy Image component – replaces the deleted optimized one
// Works with normal <img> paths – no build errors
export interface Props {
  src: string;
  alt?: string;
  width?: number | string;
  height?: number | string;
  class?: string;
  loading?: "lazy" | "eager";
}

const { src, alt = "", width, height, class: className, loading = "lazy" } = Astro.props;
---

<img
  src={src}
  alt={alt}
  width={width}
  height={height}
  class={className}
  loading={loading}
  decoding="async"
/>