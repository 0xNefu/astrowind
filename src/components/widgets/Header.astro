---
import { Icon } from 'astro-icon/components';
import Logo from '~/components/Logo.astro';
import ToggleTheme from '~/components/common/ToggleTheme.astro';
import ToggleMenu from '~/components/common/ToggleMenu.astro';

import { getHomePermalink } from '~/utils/permalinks';

const links = [
  { text: 'Blog',    href: '/blog' },
  { text: 'Yield',   href: '/category/yield' },
  { text: 'Perps',   href: '/category/perps' },
  { text: 'EVM',     href: '/category/evm' },
  { text: 'Solana',  href: '/category/solana' },
  { text: 'Aster',   href: '/category/aster' },
  { text: 'Bitcoin', href: '/category/bitcoin' },
  { text: 'Dashboard', href: '#', disabled: true },   // Coming Soon
];
---

<header class="relative z-50 flex-none w-full bg-background/80 backdrop-blur-lg border-b border-border">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="flex items-center justify-between h-16">

      <div class="flex items-center">
        <a href={getHomePermalink()} class="flex items-center">
          <Logo />
        </a>
      </div>

      <nav class="hidden md:flex items-center space-x-10">
        {links.map((link) => (
          link.disabled ? (
            <span class="text-sm font-medium text-muted opacity-60 cursor-not-allowed">
              {link.text}
              <span class="ml-1 text-xs text-cyan-400">Soon</span>
            </span>
          ) : (
            <a
              href={link.href}
              class="text-sm font-medium text-foreground hover:text-accent transition"
            >
              {link.text}
            </a>
          )
        ))}
      </nav>

      <div class="flex items-center gap-4">
        <ToggleTheme />
        <div class="md:hidden">
          <ToggleMenu />
        </div>
      </div>

    </div>
  </div>
</header>