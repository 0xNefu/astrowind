---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import Button from '~/components/ui/Button.astro';

interface Props {
  title?: string;
  subtitle?: string;
  actions?: Array<{
    text: string;
    href: string;
    variant?: 'primary' | 'secondary' | 'link';
    size?: 'md' | 'lg';
    icon?: string;
  }>;
  id?: string;
}

const {
  title = "Stay poor or stay updated.",
  subtitle = "New research every week. No paywall. No noise.",
  actions = [
    { text: 'Read Alpha', href: '/blog', variant: 'primary', size: 'lg' },
    { text: '@txchyon', href: 'https://twitter.com/txchyon', icon: 'tabler:brand-twitter' },
    { text: 'Join Discord', href: 'https://discord.gg/txchyon', icon: 'tabler:brand-discord' },
  ],
  id,
} = Astro.props;
---

<WidgetWrapper id={id} containerClass="py-20">
  <div class="max-w-4xl mx-auto text-center px-6">
    <Headline
      title={title}
      subtitle={subtitle}
      classes={{
        container: 'mb-10',
        title: 'text-5xl md:text-6xl font-bold tracking-tight text-white',
        subtitle: 'text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto',
      }}
    />

    <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
      {actions.map((action) => (
        <Button
          {...action}
          class={`px-10 py-5 text-lg font-bold transition-all transform hover:scale-105 ${
            action.variant === 'primary'
              ? 'bg-gradient-to-r from-cyan-500 to-purple-600 shadow-2xl shadow-cyan-500/50'
              : 'bg-white/10 backdrop-blur border border-cyan-500/30 hover:bg-white/20'
          }`}
        />
      ))}
    </div>
  </div>
</WidgetWrapper>